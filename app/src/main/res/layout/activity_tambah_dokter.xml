<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9">

    <!-- BACK -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@android:color/black"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahkan Dokter"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD FORM -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- NAMA DOKTER -->
            <TextView
                android:text="Nama Dokter"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etNamaDokter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:hint="Masukkan nama dokter"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"/>

            <!-- KATEGORI -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="Kategori Dokter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etKategori"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:hint="Spesialis / Umum"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"/>

            <!-- TEMPAT BEKERJA -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="Tempat Bekerja"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etTempat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:hint="Nama klinik / rumah sakit"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"/>

            <!-- FOTO -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="Tambahkan Foto Dokter*"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChooseImage"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:text="Choose Image"
                android:textAllCaps="false"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"
                app:cornerRadius="12dp"/>
            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="@drawable/bg_image_preview"/>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- BUTTON SUBMIT -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTambahDokter"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Tambahkan Dokter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFA5"
        app:cornerRadius="28dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        layout="@layout/view_bottom_nav2"
        android:background="@drawable/bg_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
