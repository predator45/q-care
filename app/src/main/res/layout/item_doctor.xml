<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- NAMA -->
            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dr. Suparma"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/statusBox"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- SPESIALIS -->
            <TextView
                android:id="@+id/tvDoctorSpec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dentis, City Dental"
                android:textSize="14sp"
                android:textColor="#7A7A7A"
                app:layout_constraintStart_toStartOf="@id/tvDoctorName"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                app:layout_constraintEnd_toStartOf="@id/statusBox"/>

            <!-- STATUS -->
            <LinearLayout
                android:id="@+id/statusBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/bg_status_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!-- READY -->
                    <TextView
                        android:id="@+id/tvReady"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="Ready"
                        android:textSize="12sp"
                        android:textColor="#00BFA5"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bg_ready_inactive"/>

                    <!-- FULL -->
                    <TextView
                        android:id="@+id/tvFull"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="Full"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bg_full_active"/>
                </LinearLayout>
            </LinearLayout>

            <!-- DIVIDER (PASTI KELIHATAN) -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_divider_dashed"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorSpec"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- DELETE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#00BFA5"
                app:cornerRadius="18dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:layout_marginTop="4dp"

                app:layout_constraintStart_toStartOf="parent"/>

            <!-- MANAGE -->
            <TextView
                android:id="@+id/tvManage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Antrian Dokter >>"
                android:textStyle="bold"
                android:textColor="#00BFA5"
                app:layout_constraintBaseline_toBaselineOf="@id/btnDelete"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
