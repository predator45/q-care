<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="14dp"
    android:background="@drawable/bg_card">

    <!-- INFO PASIEN -->
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Muhammad Bobi"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnKonfirmasi"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Suparma, Kode (B)"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/tvNama"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        app:layout_constraintEnd_toStartOf="@id/btnKonfirmasi"/>

    <!-- BUTTON KONFIRMASI -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Konfirmasi"
        android:textSize="11sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#00A99F"
        android:paddingHorizontal="16dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON TOLAK -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTolak"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Tolak"
        android:textSize="11sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#9E9E9E"
        android:paddingHorizontal="24dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnKonfirmasi"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
